<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/TempleTagTheme</item>
        <item name="colorPrimaryDark">@color/TempleTagTheme</item>
        <item name="colorAccent">@color/TempleTagTheme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/TempleTagTheme</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:topRightRadius">8dp</item>
        <item name="android:topLeftRadius">8dp</item>
        <item name="android:bottomLeftRadius">8dp</item>
        <item name="android:bottomRightRadius">8dp</item>
        <item name="android:shadowColor">@color/white</item>
    </style>

</resources>
